<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_item_background"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    tools:ignore="UseCompoundDrawables" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/layout_accounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/account_mini_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ssc_elfec_btn_default_holo_light"
                    android:contentDescription="@string/account_img"
                    android:padding="4dp"
                    android:src="@drawable/account_mini" />

                <TextView
                    android:id="@+id/row_account_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/account_sample"
                    android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
                    android:textColor="@color/dark_gray"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/row_nus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ssc_elfec_btn_default_holo_light"
                    android:contentDescription="@string/account_img"
                    android:padding="4dp"
                    android:src="@drawable/nus_mini" />

                <TextView
                    android:id="@+id/row_nus_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/nus_sample"
                    android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:orientation="horizontal"
            android:background="@drawable/ssc_elfec_btn_default_holo_light"
            android:gravity="center" >
            <TextView
                android:id="@+id/total_amount"
               	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/account_balance_sample"
	            android:textAppearance="@style/TextAppearance.CustomFont.Light"
	            android:textColor="@color/white"
	            android:textSize="22sp" />
            <LinearLayout 
                android:id="@+id/layout_decimal_debt"
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginLeft="5dp"
	            android:layout_marginStart="5dp" 
	            android:orientation="vertical">
                <TextView
                android:id="@+id/total_amount_decimal"
               	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/decimal_balance_sample"
	            android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
	            android:textColor="@color/white"
	            android:includeFontPadding="false"
	            android:padding="0dp"
	            android:background="@null"
	            android:textSize="13sp" />
                <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="@android:color/white" />
                <TextView
               	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="@string/lbl_currency"
	            android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
	            android:textColor="@color/white"
	            android:includeFontPadding="false"
	            android:padding="0dp"
	            android:background="@null"
	            android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical|start"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dasd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ssc_elfec_btn_default_holo_light"
            android:contentDescription="@string/account_img"
            android:padding="4dp"
            android:src="@drawable/account_owner" />

        <TextView
            android:id="@+id/row_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/name_sample"
            android:textAppearance="@style/TextAppearance.CustomFont.Normal"
            android:textColor="@color/dark_gray"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>