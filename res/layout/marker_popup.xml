<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/marker_location_type"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_text_color"
        android:textSize="12sp"/>
    
    <TextView
        android:id="@+id/marker_title"
        android:layout_marginTop="-8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ssc_elfec_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/lbl_marker_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_marker_address"
        android:textSize="14sp"/> 
    <TextView
        android:id="@+id/txt_marker_address"
        android:layout_marginTop="-8dp"
        android:layout_width="220dp"
        android:lineSpacingExtra="-2dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>
    
    <TextView
        android:id="@+id/lbl_marker_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_marker_phone"
        android:textSize="14sp"/>   
    <TextView
        android:id="@+id/txt_marker_phone"
        android:layout_marginTop="-8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:duplicateParentState="true"
        android:textSize="16sp"/>
    
     <TextView
        android:id="@+id/lbl_marker_bussines_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_marker_bussines_hours"
        android:textSize="14sp"/>   
    <TextView
        android:id="@+id/txt_marker_bussines_hours"
        android:layout_marginTop="-8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

</LinearLayout>
