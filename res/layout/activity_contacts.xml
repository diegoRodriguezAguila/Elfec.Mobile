<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_top_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_top_margin"    
    tools:context="com.elfec.ssc.view.Contacts" >
    
    <TextView
        android:id="@+id/contacts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.CustomFont.Title" />
    
    <ImageView
        android:id="@+id/img_logo_elfec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contacts_title"
        android:contentDescription="@string/logo_elfec_caption"
        android:src="@drawable/elfec_vertical_logo" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/img_logo_elfec"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/ssc_elfec_color" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:fillViewport="true"
        android:layout_below="@+id/img_logo_elfec"
        >
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:orientation="vertical" >
        
    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/contact_phone"
        android:drawableStart="@drawable/contact_phone"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/contact_link_txt_color"
        android:clickable="true"
        android:onClick="contactPhoneClick"
        android:textAppearance="@style/TextAppearance.CustomFont.ContactLbl"/>
	
    <TextView
        android:id="@+id/contact_address"
        android:drawableLeft="@drawable/contact_address"
        android:drawableStart="@drawable/contact_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.CustomFont.ContactLbl"/>
    
    <TextView
        android:id="@+id/contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/contact_email"
        android:drawableStart="@drawable/contact_email"
        android:gravity="center_vertical"
        android:textColor="@color/contact_link_txt_color"
        android:clickable="true"
        android:onClick="contactEmailClick"
        android:textAppearance="@style/TextAppearance.CustomFont.ContactLbl"/>
    
    <TextView
        android:id="@+id/contact_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/contact_web"
        android:drawableStart="@drawable/contact_web"
        android:gravity="center_vertical"
        android:textColor="@color/contact_link_txt_color"
        android:clickable="true"
        android:onClick="contactWebClick"
        android:textAppearance="@style/TextAppearance.CustomFont.ContactLbl"/>
    
    <TextView
        android:id="@+id/contact_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/contact_facebook"
        android:drawableStart="@drawable/contact_facebook"
        android:gravity="center_vertical"
        android:textColor="@color/contact_link_txt_color"
        android:clickable="true"
        android:onClick="contactFacebookClick"
        android:text="@string/lbl_visit_us_facebook"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppearance.CustomFont.ContactLbl"/>
	</LinearLayout>
	</ScrollView>

    

</RelativeLayout>
