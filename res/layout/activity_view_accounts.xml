<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_top_margin"
    tools:context=".ViewAccounts" >

    <TextView
        android:id="@+id/view_accounts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/view_accounts_title"
        android:textAppearance="@style/TextAppearance.CustomFont.Title" />

    <Button
        android:id="@+id/button2"
        style="@style/Button_mahapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="btnRegisterAccountClick"
        android:text="@string/btn_ok" />

    <LinearLayout
        android:id="@+id/nus_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

    <ListView
        android:id="@+id/accounts_list"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:divider="@android:color/transparent"
  		android:dividerHeight="3dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" 
        android:layout_alignParentBottom="true"
        android:fastScrollEnabled="true"
        android:layout_below="@+id/button2" >

    </ListView>

</RelativeLayout>