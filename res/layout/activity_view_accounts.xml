<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_top_margin"
    tools:context=".ViewAccounts" >

    <TextView
        android:id="@+id/view_accounts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/view_accounts_title"
        android:textAppearance="@style/TextAppearance.CustomFont.Title" />

   

    <LinearLayout
        android:id="@+id/view_accounts_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"   
        android:gravity="top"
        android:layout_below="@+id/view_accounts_title"    
        android:orientation="horizontal" >
        <ImageButton
        android:id="@+id/btn_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:onClick="btnRegisterAccountClick"
        android:contentDescription="@string/register_account_title"
        android:src="@drawable/add_account" />
        
         <TextView
             android:id="@+id/no_accounts_text_view_1"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:paddingLeft="5dp"
             android:paddingStart="5dp"
             android:textSize="18sp"
             android:text="Actualmente no tiene cuentas registradas" 
             />
			 
    </LinearLayout>
    <TextView
	    android:id="@+id/no_accounts_text_view_2"
        android:layout_width="match_parent"
        android:layout_height="43dp"
       	android:layout_alignLeft="@+id/view_accounts_title_layout"
        android:layout_alignStart="@+id/view_accounts_title_layout" 
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/view_accounts_title_layout" 
        android:textAppearance="@style/TextAppearance.CustomFont.Title"
 		android:textSize="18dp"
        android:text="Utilice el boton      para agregar una nueva cuenta"/>
	    
    
    <ListView
        android:id="@+id/accounts_list"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:divider="@android:color/transparent"
  		android:dividerHeight="3dp"
        android:layout_alignLeft="@+id/view_accounts_title_layout"
        android:layout_alignStart="@+id/view_accounts_title_layout" 
        android:layout_alignParentBottom="true"
        android:fastScrollEnabled="true"
        android:visibility="gone"
        android:layout_below="@+id/view_accounts_title_layout" >

    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/no_accounts_text_view_2"
        android:layout_centerHorizontal="true"
        android:background="@color/ssc_elfec_color"
         android:layout_below="@+id/view_accounts_title_layout" 
         
        android:contentDescription="123123"
        android:src="@drawable/add_account_mini" />

</RelativeLayout>